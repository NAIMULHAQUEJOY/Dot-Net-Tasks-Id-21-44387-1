@model Task_2_7_2_24.Models.Student

@{
    ViewBag.Title = "Index";
}

<p class="text-danger">
    @Html.ValidationSummary()
</p>

<h2>Create Student</h2>
<form method="post" action="">
    <input type="text" value="@Model.Name" placeholder="Name" class="form-control" name="Name"></input>
    <span class="text-danger">@Html.ValidationMessageFor(model => model.Name)</span>
    <br />

    <input type="text" value="@Model.ID" placeholder="ID" class="form-control" name="ID"></input>
    <span class="text-danger">@Html.ValidationMessageFor(model => model.ID)</span>
    <br />

    <input type="text" value="@Model.Username" placeholder="Username" class="form-control" name="Username"></input>
    <span class="text-danger">@Html.ValidationMessageFor(model => model.Username)</span>
    <br />

    <input type="text" value="@Model.Email" placeholder="Email" class="form-control" name="Email"></input>
    <span class="text-danger">@Html.ValidationMessageFor(model => model.Email)</span>
    <br />

    <input type="submit" value="SignUp" class="btn btn-danger" />
</form>

